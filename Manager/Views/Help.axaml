<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i18n="clr-namespace:Timotheus.Localization"
        mc:Ignorable="d"
        x:Class="Timotheus.Views.Help"
        Title="{x:Static i18n:Localization.Help}" Width="400" SizeToContent="Height">
  <StackPanel Margin="10">
    <Image Source="/Resources/Icon.ico" Width="100" Height="100" HorizontalAlignment="Left"/>
    <StackPanel Margin="10">
      <TextBlock Text="Timotheus" FontSize="24" FontWeight="Bold"/>
      <TextBlock Text=" "/>
      <TextBlock Text="{Binding Version}"/>
      <TextBlock Text="{Binding Source}"/>
      <TextBlock Text="{Binding License}"/>
      <TextBlock Text=" "/>
      <TextBlock Text="{Binding Contributors}"/>
      <TextBlock Text="{Binding Email}"/>
      <Button HorizontalAlignment="Right" Content="{x:Static i18n:Localization.Help_Close}" Click="Close_Click"/>
    </StackPanel>
  </StackPanel>
</Window>