<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i18n="clr-namespace:Timotheus.Localization"
        mc:Ignorable="d" Width="400" SizeToContent="Height"
        x:Class="Timotheus.PasswordDialog"
        Title="{x:Static i18n:Localization.PasswordDialog}" CanResize="False" WindowStartupLocation="CenterOwner" FontFamily="Arvo" Icon="/Resources/Icon.ico">

  <DockPanel Margin="20">
    <DockPanel DockPanel.Dock="Top" Margin="0 0 0 10">
      <TextBlock Text="{x:Static i18n:Localization.PasswordDialog_Label}" Width="100" VerticalAlignment="Center"/>
      <TextBox Watermark="********" PasswordChar="*" Text="{Binding Password}"/>
    </DockPanel>
    <CheckBox Content="{x:Static i18n:Localization.PasswordDialog_SaveBox}" IsChecked="{Binding Save}"/>
    <DockPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom" HorizontalAlignment="Right">
      <Button Content="{x:Static i18n:Localization.PasswordDialog_OKButton}" HorizontalContentAlignment="Center" Width="50" Click="Ok_Click" Margin="10 0"/>
      <Button Content="{x:Static i18n:Localization.PasswordDialog_CancelButton}" HorizontalContentAlignment="Center" Click="Close_Click"/>
    </DockPanel>
  </DockPanel>
</Window>
