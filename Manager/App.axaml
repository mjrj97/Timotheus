<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Timotheus.App">
    <Application.Styles>
		<FluentTheme Mode="Light"/>
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Default.xaml"/>
		<StyleInclude Source="/Style.axaml"/>
    </Application.Styles>
	<TrayIcon.Icons>
		<TrayIcons>
			<TrayIcon Icon="/Resources/Icon.ico" ToolTipText="Timotheus">
				<TrayIcon.Menu>
					<NativeMenu>
						<NativeMenuItem Header="Open" Click="Open_TrayClick"/>
						<NativeMenuItem Header="Close" Click="Close_TrayClick"/>
					</NativeMenu>
				</TrayIcon.Menu>
			</TrayIcon>
		</TrayIcons>
	</TrayIcon.Icons>
</Application>
