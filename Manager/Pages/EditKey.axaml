<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i18n="clr-namespace:Timotheus.Localization"
        mc:Ignorable="d" Width="700" Height="350"
        x:Class="Timotheus.EditKey"
        Title="{x:Static i18n:Localization.EditKeyDialog}" CanResize="True" WindowStartupLocation="CenterOwner">

  <DockPanel Margin="20">
    <DockPanel DockPanel.Dock="Bottom" Margin="0 10 0 0" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
      <Button Content="{x:Static i18n:Localization.EditKeyDialog_CancelButton}" Click="Cancel_Click" DockPanel.Dock="Right"/>
      <Button Content="{x:Static i18n:Localization.EditKeyDialog_OKButton}" Click="Ok_Click" DockPanel.Dock="Right" Margin="0 0 10 0"/>
      <Button Content="{x:Static i18n:Localization.EditKeyDialog_AddStdButton}" Click="AddStdKeys_Click" DockPanel.Dock="Left"/>
    </DockPanel>

    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>
      <TextBox Text="{Binding Text}" Grid.Column="1" AcceptsReturn="True"/>
    </Grid>
  </DockPanel>
</Window>