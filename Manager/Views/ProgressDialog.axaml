<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="Timotheus.Views.ProgressDialog"
        Title="ProgressDialog" SizeToContent="Height" Width="300">
	<StackPanel Margin="10">
		<TextBlock Text="Test" Margin="0 5"/>
		<ProgressBar Height="20" Value="{Binding Progress}" Minimum="0.0" Maximum="1.0"/>
		<Button HorizontalAlignment="Right" Content="Cancel" Click="Cancel_Click" Margin="0 5 0 0"/>
	</StackPanel>
</Window>
