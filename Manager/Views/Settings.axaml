<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:i18n="clr-namespace:Timotheus.Localization"
        mc:Ignorable="d" Width="500" Height="400"
        x:Class="Timotheus.Views.Settings"
        Title="{x:Static i18n:Localization.Settings}" FontFamily="Arvo" Icon="/Resources/Icon.ico" CanResize="False" WindowStartupLocation="CenterOwner" Background="#f0f0f0">
	<DockPanel Margin="10">
		<DockPanel DockPanel.Dock="Bottom" Margin="0 10 0 0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
			<Button Content="{x:Static i18n:Localization.EditKeyDialog_OKButton}" Click="Ok_Click" Margin="0 0 10 0"/>
			<Button Content="{x:Static i18n:Localization.EditKeyDialog_CancelButton}" Click="Cancel_Click"/>
		</DockPanel>
		<Border DockPanel.Dock="Top" Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="4" Padding="4">
			<StackPanel Margin="5">
				<TextBlock Margin="0 5 0 10" Text="{x:Static i18n:Localization.Settings_InfoBox}"/>
				<DockPanel>
					<Border Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="4" Padding="4">
						<Image Source="{Binding ImagePath}" Width="100" Height="100"/>
					</Border>
					<StackPanel Margin="10 0 0 0">
						<DockPanel>
							<TextBlock Text="{x:Static i18n:Localization.Settings_NameLabel}" VerticalAlignment="Center" Width="70"/>
							<TextBox Text="{Binding AssociationName}"/>
						</DockPanel>
						<DockPanel Margin="0 7">
							<TextBlock Text="{x:Static i18n:Localization.Settings_AddressLabel}" VerticalAlignment="Center" Width="70"/>
							<TextBox Text="{Binding AssociationAddress}"/>
						</DockPanel>
						<DockPanel>
							<TextBlock Text="{x:Static i18n:Localization.Settings_LogoLabel}" VerticalAlignment="Center" Width="70"/>
							<TextBox Text="{Binding ImagePath}" Width="163"/>
							<Button Content="{x:Static i18n:Localization.Settings_BrowseButton}" Width="100" Margin="7 0 0 0" HorizontalContentAlignment="Center"/>
						</DockPanel>
					</StackPanel>
				</DockPanel>
			</StackPanel>
		</Border>
		<Border Margin="0 10 0 0" Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="4" Padding="4">
			<StackPanel Margin="5">
				<TextBlock Margin="0 5 0 10" Text="{x:Static i18n:Localization.Settings_Program}"/>
				<DockPanel>
					
				</DockPanel>
			</StackPanel>
		</Border>
	</DockPanel>
</Window>